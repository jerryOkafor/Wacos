<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/civil_brdge1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/sender_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/dues"
        android:id="@+id/purpose_tv"
        android:textColor="@android:color/black"
        android:alpha="0.59"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/amount_tv"
        android:layout_alignStart="@+id/amount_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/amount"
        android:textColor="@android:color/black"
        android:alpha="0.54"
        android:id="@+id/amount_tv"
        android:singleLine="true"
        android:layout_below="@+id/purpose_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/sender_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/my_id"
        android:id="@+id/id_tv"
        android:lines="1"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:alpha="0.38"
        android:layout_below="@+id/amount_tv"
        android:layout_toRightOf="@+id/sender_image"
        android:layout_toEndOf="@+id/sender_image" />



    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:src="@drawable/ic_action_clock"
        android:tint="@android:color/darker_gray"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/item_date"
        android:layout_toStartOf="@+id/item_date" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nov 13, 2015"
        android:id="@+id/item_date"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/black"
        android:alpha="0.12"
        android:layout_below="@+id/id_tv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>